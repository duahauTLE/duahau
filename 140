#include<stdio.h>
#define ll long long int

int main ()
{
    ll n;scanf("%lld",&n);
          ll a[2*n-1][2*n-1];
       ll   nho=n;
          ll tren=0 , duoi=2*n-2 , trai=0 , phai=2*n-2;
          
          for (int k=0 ; k <n ; k=k+1)
          {
          for ( int i=tren ; i<=duoi;i=i+1)
          {
            for (int j=trai ; j <=phai ;j=j+1)
            {
                if (i==tren||i==duoi||j==trai||j==phai)
                {
                    a[i][j]=nho;
                }
               
            }
          } 
       
tren++;
duoi--;
trai++;
phai--;
nho--;
          }
          
for ( int i=0 ; i<2*n-1;i=i+1)
          {
            for (int j=0 ; j <2*n-1 ;j=j+1)
            {
               printf("%lld",a[i][j]); 
            }
            printf("\n");
          } 

}

